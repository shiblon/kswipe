{
  "name": "KSwipe",
  "version": "0.0.0.3",
  "description": "KSwipe aims to make books easy to use for people with limited dexterity. K stands for Krissa, my friend with cerebral palsy.",
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://read.amazon.com/*"],
      "css": ["swipeOverlay.css"],
      "js": ["swipeOverlay.js"]
    },
    {
      "matches": ["*://read.amazon.com/*/KindleReaderApp.html"],
      "js": ["readerFrame.js"],
      "all_frames": true
    }
  ],
  "manifest_version": 2,
  "web_accessible_resources": [
    "images/expand.png",
    "images/contract.png",
    "images/exit.png"
  ]
}
